# BEGIN leverage browser caching
<IfModule mod_headers.c>

    # CSS // 1 week
    <FilesMatch "\.(css)$">
        Header set Cache-Control "public, max-age=604800"
    </FilesMatch>

    # JavaScript // 1 week
    <FilesMatch "\.(js)$">
        Header set Cache-Control "public, max-age=604800"
    </FilesMatch>

    # Media files: Images // 1 month
    <FilesMatch "\.(jpg|jpeg|png|gif|bmp|svg)$">
        Header set Cache-Control "public, max-age=2592000"
    </FilesMatch>

    # Web fonts // 1 year
    <FilesMatch "\.(eot|ttf|woff|woff2)$">
        Header set Cache-Control "public, max-age=31536000"
    </FilesMatch>

</IfModule>
# END leverage browser caching

<IfModule mod_rewrite.c>
    # Options +FollowSymLinks
    RewriteEngine On
    # RewriteCond %{SCRIPT_FILENAME} !-d
    # RewriteCond %{SCRIPT_FILENAME} !-f
    
    # RewriteRule ^odrednica/(\d+)*$ ./odrednica.php?br=$1
    RewriteRule ^/arhiv(.*)$ /arhiv/prda/$1 [R=301,NC,L]
</IfModule>